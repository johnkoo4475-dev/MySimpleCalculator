<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Calculator" Height="450" Width="350">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="Display" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                 Height="80" FontSize="32" VerticalContentAlignment="Center"
                 TextAlignment="Right" IsReadOnly="True" Text="0" />

        <!-- Row 1 -->        
        <Button Grid.Row="1" Grid.Column="0" Content="C" FontSize="18" Click="Clear_Click" />
        <Button Grid.Row="1" Grid.Column="2" Content="/" FontSize="18" Click="Op_Click" />
        <Button Grid.Row="1" Grid.Column="3" Content="*" FontSize="18" Click="Op_Click" />

        <!-- Row 2 -->
        <Button Grid.Row="2" Grid.Column="0" Content="7" FontSize="18" Click="Digit_Click" />
        <Button Grid.Row="2" Grid.Column="1" Content="8" FontSize="18" Click="Digit_Click" />
        <Button Grid.Row="2" Grid.Column="2" Content="9" FontSize="18" Click="Digit_Click" />
        <Button Grid.Row="2" Grid.Column="3" Content="-" FontSize="18" Click="Op_Click" />

        <!-- Row 3 -->        <Button Grid.Row="3" Grid.Column="0" Content="4" FontSize="18" Click="Digit_Click" />
        <Button Grid.Row="3" Grid.Column="1" Content="5" FontSize="18" Click="Digit_Click" />
        <Button Grid.Row="3" Grid.Column="2" Content="6" FontSize="18" Click="Digit_Click" />
        <Button Grid.Row="3" Grid.Column="3" Content="+" FontSize="18" Click="Op_Click" />

        <!-- Row 4 -->        <Button Grid.Row="4" Grid.Column="0" Content="1" FontSize="18" Click="Digit_Click" />
        <Button Grid.Row="4" Grid.Column="1" Content="2" FontSize="18" Click="Digit_Click" />
        <Button Grid.Row="4" Grid.Column="2" Content="3" FontSize="18" Click="Digit_Click" />
        <Button Grid.Row="4" Grid.Column="3" Content="=" FontSize="18" Grid.RowSpan="2" Click="Equals_Click" />

        <!-- Row 5 -->        <Button Grid.Row="5" Grid.Column="0" Content="0" FontSize="18" Click="Digit_Click" />
        <Button Grid.Row="5" Grid.Column="1" Content="." FontSize="18" Click="Decimal_Click" />
        <Button Grid.Row="5" Grid.Column="2" Content="+/-" FontSize="18" Click="Negate_Click" />

    </Grid>
</Window>
